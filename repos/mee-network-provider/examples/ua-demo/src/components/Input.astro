---
import Link from './Link.astro';

interface Props {
  label?: string;
  type?: astroHTML.JSX.IntrinsicElements["input"]["type"];
  name: string;
  value?: string;
  helperText?: string;
}
const { label, type = "text", name, value = "", helperText } = Astro.props;
---

<div class="flex flex-col">
  {label && <label for={name} class="text-gr text-xs font-medium">{label}</label>}
  <input type={type} name={name} id={name} value={value} class="border border-gr rounded bg-white px-4 py-2 text-on-surface mb-1">
  {helperText && <Link text={helperText}/>}
</div>